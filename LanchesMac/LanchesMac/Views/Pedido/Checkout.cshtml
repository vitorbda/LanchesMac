@model Pedido

<h3>Você está a um passo de completar o seu pedido</h3>
<hr />
<form asp-action="Checkot" method="post" class="form" role="form">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Nome" class="col-form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Sobrenome" class="col-form-label"></label>
            <input asp-for="Sobrenome" class="form-control" />
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Endereco1" class="col-form-label"></label>
            <input asp-for="Endereco1" class="form-control" />
            <span asp-validation-for="Endereco1" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Endereco2" class="col-form-label"></label>
            <input asp-for="Endereco2" class="form-control" />
            <span asp-validation-for="Endereco2" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Cep" class="col-form-label"></label>
            <input asp-for="Cep" class="form-control" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Cidade" class="col-form-label"></label>
            <input asp-for="Cidade" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Estado" class="col-form-label"></label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Email" class="col-form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Telefone" class="col-form-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Concluir Pedido" />
        </div>
        <br />
        <div class="form-group">
            <a class="btn btn-outline-info" asp-controller="CarrinhoCompra" asp-action="Index">Retornar ao carrinho</a>
        </div>
    </div>

</form>